; SHL     MACRO  \1,\2,\3
;         JSR    GETSHL
;         FDB    \1,\2,\3
;         ENDM 
macro SHL     (a,b,c) {
        JSR    GETSHL
        FDB    |a|, |b|, |c|
        }

; KILP    MACRO  \1,\2
;         JSR    KILPOS
;         FDB    \1
;         FDB    \2
;         ENDM 
macro KILP (a,b) {
        JSR    KILPOS
        FDB    |a|
        FDB    |b|
        }

; KILO    MACRO  \1,\2
;         JSR    KILOS
;         FDB    \1
;         FDB    \2
;         ENDM 
macro KILO(a,b) {
        JSR    KILOS
        FDB    |a|, |b|
        }

; *INIT OBJECT
; OBI     MACRO  \1,\2,\3
;         JSR    OBINIT
;         FDB    \1,\2,\3
;         ENDM 

macro OBI(a,b,c) {
        JSR    OBINIT
        FDB    |a|,|b|,|c|
}

